---
import I18NDebug from "@ariaskit/astro-i18n/I18NDebug.astro";
export type KT = { key: string; value: string };

interface Props {
    name: string;
    title: KT;
    p1: KT;
    p2: KT;
    p3: KT;

    photo: string;
    video: string;

    videoLinkText: string;
    videoExternal: string;
}


const { name, title, p1, p2, p3, photo, video, videoLinkText, videoExternal } =
    Astro.props as Props;
---

<section id={name} class="mb-10 mt-50">
    <h1 class="mb-4 font-semibold text-xl">{name}</h1>

    <div class="[&_p]:mb-6 leading-7">
        <p>
            <I18NDebug key={title.key}>
                <span class="text-green-500">{title.value} </span>
            </I18NDebug>
            <I18NDebug key={p1.key}>
                <span class="opacity-50">{p1.value}</span>
            </I18NDebug>
        </p>

        <I18NDebug key={p2.key}>
            <p class="opacity-50">{p2.value}</p>
        </I18NDebug>

        <I18NDebug key={p3.key}>
            <p class="opacity-50">{p3.value}</p>
        </I18NDebug>
    </div>

    <img
        src={photo}
        alt={`Foto de ${name}`}
        class="w-40 h-40 rounded-full object-cover mx-auto my-8"
    />

    <div class="aspect-video max-w-xl mx-auto mt-6">
        <iframe
            src={video}
            title={videoTitle}
            class="w-full h-full rounded-lg"
            frameborder="0"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
            allowfullscreen
        ></iframe>
        <a
         href={videoExternal}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-block mt-4 text-green-500 font-medium hover:underline text-center w-full"
            >
    {videoLinkText}
</a>

    </div>
</section>
